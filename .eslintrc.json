{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential",
    "plugin:nuxt/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["vue"],
  "rules": {
    "vue/no-multiple-template-root": 0
  },
  "overrides": [
    {
      "files": ["**/pages/**/*.{js,ts,jsx,tsx,vue}"],
      "rules": { "vue/multi-word-component-names": "off" }
    }
  ],
  "globals": {
    "useHead": false
  }
}
